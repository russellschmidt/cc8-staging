<%= form_for(project, html: { multipart: true }) do |f| %>
  <div class="form-group">
    <label for="camp-name">Name</label>
    <%= f.text_field :name, class: "form-control", id: "camp-name", placeholder: "Campaign Name" %>
  </div>

  <div class="form-group">
    <label for="camp-project">Project for Campaign</label>
    <%= f.select( :project_id, Project.all.collect {|project| [project.name, project.id] }, class: "form-control", id: "camp-project", selected: params[:project_param]) %>
  </div>

  <div class="form-group">
    <label for="camp-city">City</label>
    <%= f.text_field :city, class: "form-control", id: "camp-city", placeholder: "Rancho Cucamonga" %>
  </div>

  <div class="form-group">
    <label for="camp-state">State</label>
