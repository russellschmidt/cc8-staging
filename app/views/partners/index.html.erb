<div class="row">
  <div class="col-xs-12">
    <h1>All Partners</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Create New Partner', new_partner_path, class: "btn btn-default" %>

  </div>
</div>

<hr />

<div class="row">
  <div class="col-xs-3">
    <h5>Partner</h5>
  </div>

  <div class="col-xs-2">
    <h5>Projects by Partner</h5>
  </div>

  <div class="col-xs-2">
    <h5>Partner Location</h5>
  </div>

  <div class="col-xs-2">
  </div>

  <div class="col-xs-2">
  </div>
</div>

<% @partners.each do |partner| %>

  <div class="row">
    <div class="col-xs-3">
      <%= link_to partner.name, partner_path(partner) %>
    </div>

    <div class="col-xs-2">
      <p><%= Project.where(partner_id: partner.id).count %></p>
    </div>

    <div class="col-xs-2">
      <p><%= Location.find(partner.location_id).name %></p>
    </div>

    <div class="col-xs-2">
      <%= link_to 'Edit', edit_partner_path(partner),
              class: "btn btn-default btn-sm" %>
    </div>

    <div class="col-xs-2">
      <%= link_to 'Delete', [partner],
              method: :delete,
              data: { confirm: 'Are you sure? Forever is a long time.' },
              class: "btn btn-danger btn-sm" %>
    </div>
  </div>

<% end %>

