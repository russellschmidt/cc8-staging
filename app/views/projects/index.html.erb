<div class="row">
  <div class="col-xs-12">
    <h1>All Projects</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Create New Project', new_project_path, class: "btn btn-default" %>
  </div>
</div>
<hr/>
<div class="jumbotron">
  <h1>Note</h1>
  <p>The projects below are the live site pages. See the 'edit' page for listing of campaigns associated with this project.</p>
</div>

<hr />

<div class="row">
  <div class="col-xs-3">
    <h5>Project</h5>
  </div>

  <div class="col-xs-2">
    <h5>Campaigns by Project</h5>
  </div>

  <div class="col-xs-2">
  </div>

  <div class="col-xs-2">
  </div>
</div>

<% @projects.each do |project| %>

  <div class="row">
    <div class="col-xs-3">
      <%= link_to project.name, project_path(project) %>
    </div>

    <div class="col-xs-2">
      <p><%= Campaign.where(project_id: project.id).count %></p>
    </div>

    <div class="col-xs-2">
      <%= link_to 'Edit', edit_project_path(project, partner_param: project.partner_id),
          class: 'btn btn-default btn-sm ' %>
    </div>

    <div class="col-xs-2">
      <%= link_to 'Delete', [project],
              method: :delete,
              data: { confirm: 'Are you sure? Forever is a long time.' },
              class: "btn btn-danger btn-sm" %>
    </div>
  </div>

<% end %>

