<h1><%= @project.name %></h1>
<h2><%= @partner.name %></h2>

<div>
  <p>Help heal the bay today!</p>

  <div>
    <h4>Active Projects</h4>
    <% if get_project_campaigns(@project).present? %>
      <% get_project_campaigns(@project).each do |campaign| %>
        <p><%= campaign.name %></p>
        <p>Campaign ends: <%= campaign.end_date.to_s(:long) %></p>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
        <label class="amount">
          <span>Amount: $5.00</span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-amount="500"
              data-name="Climate Cents"
              data-description="<%= @project.name %>"
              data-locale="auto"
              data-zip-code="true">>
              </script>
    <% end %>

  </div>
</div>

<hr/>
<%= link_to 'Back', :back, class: "btn btn-primary btn-sm" %>
